<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/margenes"
    tools:context="com.example.roxed.encuestariosucio.InformacionOcupacionSecundariaActivity"
    android:background="@drawable/fondo2">

    <!-- Continuación de la información de persona-->
    <!-- Tener en consideración los mismos aspectos que la ocupación princial -->


    <TableRow>
        <TextView
            style="@style/Subtitulos2"
            android:text="Ocupación Secundaria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:textStyle="bold"/>
        <Spinner
            style="@style/spinnerOP"
            android:id="@+id/spinnerOcupacionSecundaria"
            android:layout_width="100dp"
            android:layout_height="wrap_content" />
    </TableRow>

    <TableRow>
        <TextView
            style="@style/Subtitulos2"
            android:text="Lugar en donde estudia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:textStyle="bold"/>

        <Spinner
            style="@style/spinnerOP"
            android:id="@+id/spinnerLugarEstudioSecundaria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </TableRow>

    <TableRow>
        <TextView
            style="@style/Subtitulos2"
            android:text="Sector en el que trabaja"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:textStyle="bold"/>
        <Spinner
            style="@style/spinnerOP"
            android:id="@+id/spinnerSectorTrabajoSecundaria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </TableRow>

    <TableRow>

        <TextView
            style="@style/Subtitulos2"
            android:text="Labor que desempeña"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:textStyle="bold"/>
        <Spinner
            style="@style/spinnerOP"
            android:id="@+id/spinnerLaborDesempeñaSecundaria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </TableRow>

    <TableRow>

        <TextView
            style="@style/Subtitulos2"
            android:text="Lugar de trabajo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:textStyle="bold"
            />
        <Spinner
            style="@style/spinnerOP"
            android:id="@+id/spinnerLugarTrabajoSecundaria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </TableRow>

    <TableRow>
        <TextView
            style="@style/Subtitulos2"
            android:text="Dirección de la actividad principal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:textStyle="bold"
            android:layout_margin="5dp"/>
        <EditText
            style="@style/editText"
            android:id="@+id/txtDireccionActividadSecundaria"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:hint="Dirección actividad secundaria..."/>

    </TableRow>

    <TableRow>
        <TextView
            style="@style/Subtitulos2"
            android:text="ZAT Actividad Secundaria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:textStyle="bold"
            android:layout_margin="5dp"/>


        <LinearLayout>

            <Spinner
                style="@style/spinnerOP"
                android:id="@+id/spinnerZATActividadSecundaria"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text=""
                android:paddingRight="110dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button

                style="@style/botones"
                android:id="@+id/btnContinuarInformacionViajes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Agregar Viaje "
                android:onClick="onClickContinuarInformacionViajes" />

            <TextView
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button

                style="@style/botones"
                android:id="@+id/btnContinuarAgregarPersona"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Agregar Persona "
                android:onClick="onClickContinuarAgregarPersona" />
            <TextView
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button

                style="@style/botones"
                android:id="@+id/btnFinalizar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Finalizar "
                android:onClick="onClickFinalizar" />

        </LinearLayout>


    </TableRow>

    <TableRow>

    </TableRow>





</TableLayout>
