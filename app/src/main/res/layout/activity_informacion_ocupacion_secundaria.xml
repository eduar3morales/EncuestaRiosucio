<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.roxed.encuestariosucio.InformacionOcupacionSecundariaActivity"
    android:background="@drawable/fondo2">

    <!-- Continuación de la información de persona-->
    <!-- Tener en consideración los mismos aspectos que la ocupación princial -->


    <TableRow>
        <TextView
            android:text="Ocupación Secundaria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"/>
        <Spinner
            android:id="@+id/spinnerOcupacionSecundaria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </TableRow>

    <TableRow>
        <TextView
            android:text="Lugar en donde estudia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"/>

        <Spinner
            android:id="@+id/spinnerLugarEstudioSecundaria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </TableRow>

    <TableRow>
        <TextView
            android:text="Sector en el que trabaja"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"/>
        <Spinner
            android:id="@+id/spinnerSectorTrabajoSecundaria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </TableRow>

    <TableRow>

        <TextView
            android:text="Labor que desempeña"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"/>
        <Spinner
            android:id="@+id/spinnerLaborDesempeñaSecundaria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </TableRow>

    <TableRow>

        <TextView
            android:text="Lugar de trabajo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"/>
        <Spinner
            android:id="@+id/spinnerLugarTrabajoSecundaria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </TableRow>

    <TableRow>
        <TextView
            android:text="Dirección de la actividad principal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/txtDireccionActividadSecundaria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Dirección actividad secundaria..."/>

    </TableRow>

    <TableRow>
        <TextView
            android:text="ZAT Actividad Secundaria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"/>
        <Spinner
            android:id="@+id/spinnerZATActividadSecundaria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </TableRow>

    <TableRow>

        <Button
            android:id="@+id/btnContinuarInformacionViajes"
            android:text="Continuar"
            android:onClick="onClickContinuarInformacionViajes"/>
    </TableRow>


</TableLayout>
